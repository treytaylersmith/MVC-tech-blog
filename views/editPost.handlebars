<div class="text-light fw-bold text-center bg-danger bg-gradient p-2 mx-5 my-3 bg-opacity-75 rounded-pill text-white">
  <div>
    <h2>Edit Post</h2>
  </div>
  <form id="edit-post-form">
    <input type="hidden" name="post-id" value="{{post.id}}" class="rounded"/>

    <div class=" fw-bold text-white p-2 m-2">
      <label for="post-title">Title</label>
      <input type="text" name="post-title" value="{{post.title}}" class="rounded"/>
    </div>

    <div class=" fw-bold text-white p-2 m-2">
      <label for="post-body">Content</label>
      <textarea name="post-body" class="rounded">{{post.body}}</textarea>
    </div>

    <div class=" fw-bold text-white p-2 m-2">
      <button type="submit" class="btn btn-info text-white fw-bold m-3">Update</button>
      <button type="button" id="delete-btn" class="btn btn-info text-white fw-bold m-3">Delete</button>
    </div>
  </form>
</div>

<script src="/js/editPost.js"></script>
